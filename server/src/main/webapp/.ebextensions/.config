packages:
  yum:
    mysql-connector-java: []
 
container_commands:
  install-mysql-connector-java:
    command: "/bin/ln -s /usr/share/java/mysql-connector-java.jar /usr/share/tomcat7/lib"
    ignoreErrors: true
  install-mysql-connector-java-8:
    command: "/bin/ln -s /usr/share/java/mysql-connector-java.jar /usr/share/tomcat8/lib"
    ignoreErrors: true